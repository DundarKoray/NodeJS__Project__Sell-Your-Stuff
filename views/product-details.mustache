<html lang="en">
    <head>
        {{> header}}
        <title>Sell Your Stuff</title>
    </head>
    <body>
        <h1>Login</h1>

        <div class="container">
            {{> menu}}
            <div class="list-group">
                <ul>

                    <div>
                        <img src="/uploads/{{imageURL}}" class="product-preview-image" />
                    </div>
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{title}}</h5>
                    </div>
                    <p class="mb-1">{{description}}</p>
                    <small class="text-success"><b>${{price}}</b></small>

                </ul>
            </div>

          <!-- Add Comment -->
        <div class="add-comment">
            <b>Add Comment</b>
            <form action="/add-comment" method="POST">
                <input type="hidden" name="productId" value="{{id}}" />
                <div class="form-group">
                    <label for="exampleInputEmail1">Title</label>
                    <input type="text" class="form-control" name="title" aria-describedby="emailHelp" placeholder="Enter title">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Descrption</label>
                    <textarea type="text" name="description" class="form-control" placeholder="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form

            <h2>Comments</h2>

            <ul class="list-group">
            {{#comments}}

                <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">{{title}}</h5>
                </div>
                <p class="mb-1">
                {{description}}
                </p>
            {{/comments}}
            </ul>
        </div>
         {{#message}}
         <div class="alert alert-danger" role="aler">
            {{message}}
         </div>
         {{/message}}
        {{> footer}}
        </div>
    </body>
</html>
